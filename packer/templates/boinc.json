{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "boinc_url": "",
    "boinc_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "source_ami": "ami-6635cd06",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "boinc {{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "scripts/boinc.conf",
      "destination": "/tmp/boinc.conf"
    },
    {
      "type": "shell",
      "script": "scripts/boinc.sh",
      "environment_vars": [
          "BOINC_URL={{user `boinc_url`}}",
          "BOINC_KEY={{user `boinc_key`}}"
      ]
    }
  ]
}
